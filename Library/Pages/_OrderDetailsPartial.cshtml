@model ICollection<LibraryCore.Models.OrderDetail>
<style>
    .row {
        padding-right: 15px
    }
</style>
<div class="modal-header">
    <h4 class="modal-title">Order Information</h4>
    <button type="button" class="close" data-dismiss="modal">&times;</button>
</div>
<div class="modal-body">
    <ul>
        <div class="row">
            <div class="col-2">Image</div>
            <div class="col-6">Title/Category</div>
            <div class="col-2">Quantity</div>
            <div class="col-2">Price</div>
        </div>
    </ul>
    <ul>
        @foreach (var product in Model)
        {
            <div class="row border-top border-bottom">
                <div class="row main align-items-center">
                    <div class="col-2"><img class="img-fluid" src="@product.Book.Image"></div>
                    <div class="col-6">
                        <div class="row text-muted">@product.Book.Title</div>
                        <div class="row">@product.Book.Category.CategoryName</div>
                    </div>
                    <div class="col-2">
                        <div class="px-1 mx-1">@product.Quantity</div>
                    </div>
                    <div class="col-2">&euro; @product.Book.Price</div>
                </div>
            </div>
        }
    </ul>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
</div>