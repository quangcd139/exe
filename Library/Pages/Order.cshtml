@page
@model Library.Pages.OrderModel
@{
}
<div class="card container-fluid pt-5 px-xl-5 pb-3">
    <div class="row">
        <div class="col cart">
            <div class="title">
                <div class="row">
                    <div class="col"><h4><b>Lịch sử giao dịch</b></h4></div>
                    <div class="col align-self-center text-right text-muted">Số lượng: @Model.Orders.Count đơn</div>
                </div>
            </div>
            @foreach (var item in Model.Orders)
            {
                <div class="row mb-3">
                    <div class="col">
                        <div class="card card-2">
                            <div class="card-body">
                                <div class="media">
                                    <div class="media-body my-auto">
                                        <div class="row my-auto flex-column flex-md-row">
                                            <div class="col-md-3 my-auto">
                                                <h6 class="mb-0">Ngày mua: @item.OrderDate.ToString().Split(" ")[0]</h6>
                                            </div>
                                            <div class="col-md-auto my-auto">
                                                <small>Địa chỉ: @item.Address</small>
                                            </div>
                                            <div class="col-md my-auto">
                                                <small>Tổng:  @item.Total.000 VND</small>
                                            </div>
                                            <div class="col-md my-auto">
                                                <small>Số lượng sản phẩm: @item.OrderDetails.Count</small>
                                            </div>
                                            <div class="col-md my-auto">
                                                <small>Trạng thái: @(item.Status=="Pending"?"Đang chờ":"Đã xử lý") </small>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col">
                                                <div class="collapse" id="orderDetailsCollapse_@item.OrderId">
                                                    <!-- Đặt mỗi collapse có id duy nhất cho từng đơn hàng -->
                                                    <div class="mt-3">
                                                        <h6>Chi tiết đơn hàng:</h6>
                                                        <ul>
                                                            @foreach (var product in item.OrderDetails)
                                                            {
                                                                <div class="row border-top border-bottom">
                                                                    <div class="row main align-items-center">
                                                                        <div class="col-2"><img class="img-fluid" src="@product.Book.Image"></div>
                                                                        <div class="col">
                                                                            <div class="row text-muted">@product.Book.Title</div>
                                                                            <div class="row">@product.Book.Category.CategoryName</div>
                                                                        </div>
                                                                        <div class="col">
                                                                            <div class="px-1 mx-1">@product.Quantity</div>
                                                                        </div>
                                                                        <div class="col"> @product.Book.Price.000 VND</div>
                                                                    </div>
                                                                </div>
                                                            }
                                                        </ul>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-auto">
                                        <button class="btn btn-primary btn-sm" type="button" data-bs-toggle="collapse"
                                                data-bs-target="#orderDetailsCollapse_@item.OrderId" aria-expanded="false"
                                                aria-controls="orderDetailsCollapse_@item.OrderId">
                                            <!-- Đặt id của collapse tương ứng với id của đơn hàng -->
                                            Chi tiết
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }

            <div class="back-to-shop"><a href="#">&leftarrow;</a><span class="text-muted">Back to shop</span></div>
        </div>
        
    </div>

</div>
