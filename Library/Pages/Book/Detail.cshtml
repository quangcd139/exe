                Publisher:<p class="mb-4">@Model.Book.Publisher</p>
                Publication Date:<p class="mb-4">@Model.Book.PublicationDate</p>

                <div class="d-flex align-items-center mb-4 pt-2">
                    <strong class="text-dark mr-3">Quantity:</strong>
                    <div class="input-group quantity mr-3" style="width: 130px;">
                        <input type="text" class="form-control bg-secondary border-0 text-center" value="1">
                    </div>
                    <a class="btn btn-primary px-3" asp-page="/Cart" asp-page-handler="AddCart" asp-route-bookId="@Model.Book.BookId">
